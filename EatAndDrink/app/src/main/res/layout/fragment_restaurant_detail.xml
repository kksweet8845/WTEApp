<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="412dp"
    android:layout_height="match_parent"
    tools:context=".RestaurantDetailFragment">

    <!-- TODO: Update blank fragment layout -->


    <FrameLayout
        android:layout_width="412dp"
        android:layout_height="210dp"
        android:layout_marginBottom="430dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/restaurantDetailImage"
            android:layout_width="412dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/books" />

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/restaurantDetailRating"
            style="@style/Widget.MaterialRatingBar.RatingBar.Indicator.Small"
            android:layout_width="190dp"
            android:layout_height="37dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="170dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/restaurantDetailAvgPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="150dp"
            android:text="TextView"
            android:textSize="18dp"
            android:background="#92F3EBEB"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/restaurantDetailOpeningHour" />


        <Button
            android:id="@+id/review_btn"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:text="評論"
            android:translationX="330dp"
            android:translationY="155dp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="412dp"
        android:layout_height="180dp"
        android:layout_marginBottom="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/restaurantDetailAddress"
            android:layout_width="202dp"
            android:layout_height="59dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="104dp"
            android:text="TextView"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/restaurantDetailOpeningHour"
            android:layout_width="202dp"
            android:layout_height="25dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="65dp"
            android:text="TextView"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/restaurantDetailAddress" />


        <FrameLayout
            android:layout_width="238dp"
            android:layout_height="53dp"
            android:background="#92F3EBEB">
                    <TextView
                        android:id="@+id/restaurantDetailName"
                        android:layout_width="224dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="5dp"
                        android:text="TextView"
                        android:textColor="#393737"
                        android:textSize="32dp" />
        </FrameLayout>

        <com.google.android.gms.maps.MapView
            android:id="@+id/restaurantDetailMapView"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:translationX="232dp" />

    </FrameLayout>

