<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/restaurant_layout">


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="83dp"
        android:layout_height="74dp"
        android:layout_marginStart="310dp"
        android:layout_marginTop="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sheep_head" />

    <TextView
        android:id="@+id/headLine"
        android:layout_width="412dp"
        android:layout_height="52dp"
        android:layout_marginTop="125dp"
        android:background="@color/colorGray"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#333333"
        android:textSize="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerRestaurants"
        android:name="com.example.eatanddrink.RestaurantItemFragment"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_marginTop="4dp"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/headLine"
        tools:context=".RestaurantItemFragment"
        tools:layout_editor_absoluteX="10dp"
        tools:listitem="@layout/fragment_restaurant_item" />

    <Button
        android:id="@+id/button_nav"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:text="â‰¡"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="177.65dp"
        android:layout_height="93.5dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/title_1" />



</androidx.constraintlayout.widget.ConstraintLayout>